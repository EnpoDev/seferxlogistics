# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# KVKK/GDPR Uyumlu Guvenlik Ayarlari
# Bu dosyayi .env olarak kopyalayin ve degerleri guncelleyin
# =============================================================================

APP_NAME=SeferXLojistik
APP_ENV=production
APP_KEY=  # php artisan key:generate ile olusturun
APP_DEBUG=false
APP_URL=https://app.seferxlojistik.com

# Locale
APP_LOCALE=tr
APP_FALLBACK_LOCALE=tr
APP_FAKER_LOCALE=tr_TR

# =============================================================================
# BROADCAST / PUSHER (Yeni credentials olusturun!)
# =============================================================================
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=  # Pusher dashboard'dan yeni olusturun
PUSHER_APP_KEY=  # Pusher dashboard'dan yeni olusturun
PUSHER_APP_SECRET=  # Pusher dashboard'dan yeni olusturun
PUSHER_APP_CLUSTER=eu

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# =============================================================================
# SECURITY SETTINGS (KRITIK)
# =============================================================================
BCRYPT_ROUNDS=12

# Session Guvenligi
SESSION_DRIVER=database
SESSION_LIFETIME=60
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.seferxlojistik.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# =============================================================================
# LOGGING (KVKK Madde 12 - 2 yil saklama)
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=daily,security
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# =============================================================================
# DATABASE
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=seferx_production
DB_USERNAME=  # Guclu kullanici adi
DB_PASSWORD=  # En az 32 karakter, ozel karakterler iceren sifre

# =============================================================================
# CACHE & QUEUE
# =============================================================================
CACHE_STORE=redis
QUEUE_CONNECTION=redis

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=  # Redis sifresi
REDIS_PORT=6379

# =============================================================================
# MAIL (SMTP)
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="bildirim@seferxlojistik.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# WEBHOOK SECURITY
# =============================================================================
WEBHOOK_SECRET_GETIR=  # Getir webhook secret
WEBHOOK_SECRET_TRENDYOL=  # Trendyol webhook secret
WEBHOOK_SECRET_YEMEKSEPETI=  # Yemeksepeti webhook secret

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_API=60
RATE_LIMIT_LOGIN=5
RATE_LIMIT_WEBHOOK=100

# =============================================================================
# KVKK/GDPR COMPLIANCE
# =============================================================================
DATA_RETENTION_DAYS=730
AUDIT_LOG_ENABLED=true
PII_MASKING_ENABLED=true

# =============================================================================
# AWS (Opsiyonel - Backup icin)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=seferx-backups
AWS_USE_PATH_STYLE_ENDPOINT=false
